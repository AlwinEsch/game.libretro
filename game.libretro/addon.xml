<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="game.libretro"
       name="Libretro Compatibility Add-on"
       version="1.0.0"
       provider-name="Team-Kodi">
  <requires>
    <import addon="kodi.game" version="1.0.0"/>
  </requires>
  <extension point="kodi.gameclient"
       library_android="game.libretro.so"
       library_linux="game.libretro.so"
       library_osx="game.libretro.dylib"
       library_windx="game.libretro.dll"
       library_wingl="game.libretro.dll">
	</extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Libretro compatibility layer for Kodi's Game API</summary>
    <description>This add-on provides a wrapper for libretro cores, translating calls and data between the two APIs.</description>
    <platform>all</platform>
  </extension>
</addon>
