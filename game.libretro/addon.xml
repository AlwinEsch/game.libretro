<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="game.libretro"
       name="Libretro Compatibility for Kodi's Game API"
       version="1.0.0"
       provider-name="Team-Kodi">
  <requires>
    <import addon="xbmc.game" version="1.0.0"/>
  </requires>
  <extension point="xbmc.gameclient"
       library_android="game.libretro.so"
       library_linux="game.libretro.so"
       library_osx="game.libretro.dylib"
       library_windx="game.libretro.dll"
       library_wingl="game.libretro.dll">
	</extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
  </extension>
</addon>
